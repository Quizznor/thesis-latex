    \vspace{0.7cm}
    \large\normalfont{of}\par
    \vspace{0.7cm}
    \LARGE\bfseries\@author\par
    \vspace{0.2cm}
    \large\normalfont{born in }\@birthplace\par
    \vspace{3.0cm}
  \end{center}

  % \flushleft\large\normalfont{Druckdatum dieser Version: }\@dateOfPrint
