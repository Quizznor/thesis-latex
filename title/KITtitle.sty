% English version
\newenvironment{KITtitle_en}{}{
  \onecolumn
  \newcommand{\snuggle}{1.25cm}
  \begin{tikzpicture}[remember picture, overlay]
    \node[inner sep=0pt, anchor=north east, xshift=4.38cm + \snuggle] (KITLogo) at (0,0)
      {\includegraphics[height=2cm, width=4.38cm]{title/KIT.png}};
    \node[inner sep=0pt, anchor=north west, xshift=-6.35cm + \textwidth - \snuggle] (UNSAMLogo) at (0,0)
      {\includegraphics[height=2cm]{title/UNSAM.png}};
  \end{tikzpicture}

  \vspace{2.3cm}
  \begin{center}
    \huge\bfseries\@title\par
    \vspace{2cm}
    \large\normalfont{To obtain the academic degree of}\par
    \vspace{0.2cm}
    \Large\bfseries{Doctor of Science}\par
    \vspace{0.2cm}
    \large\normalfont{from the Faculty of Physics of the}\par
    \large\normalfont{Karlsruhe Institute for Technology (KIT)}\par
    \vspace{0.2cm}
    \large\normalfont{and}\par
    \vspace{0.2cm}
    \large\normalfont{from the Institute of Technology "Prof. Jorge A. Sábato" of the}\par
    \large\normalfont{Universidad Nacional de General San Martín (UNSAM)}\par
