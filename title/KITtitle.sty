  \flushleft\large\normalfont{Co-referent: }\@coreferee
  \flushleft\large\normalfont{Supervisor(s): }\@supervisor
  \vspace{1cm}
  \begin{center}
    \large\normalfont\@dateOfPrint
  \end{center}
}


